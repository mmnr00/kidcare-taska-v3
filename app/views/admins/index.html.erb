                <% end %>
              </div>
            <% end %>

            <!-- CREATE BILL -->
            <% if status <= $expire %>
              <div class="col-sm-12" style="padding-top: 10px; background-color:#834C24">
                  <%= link_to bill_taska1_monthly_path(id: taska.id) do %>
                    <h6 align="center"><font color="white">RENEW PLAN</font></h6>
                  <% end %>
                </div>
            <% end %>


