                  <h5 align="center"><font color="white">GO TO DASHBOARD</font></h5>
                <% end %>
              </div>
            <% else %>
              <div class="col-sm-12" style="padding-top: 10px; background-color:#F2635F">
                <%= link_to taska_path(taska) do %>
