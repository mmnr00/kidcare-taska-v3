<%
  lft = "0px"
  rgh = "0px"
  if params[:pdf].blank?
    lft = "-25px"
    rgh = "-25px"
  end

%>

<div style="margin-left: <%= lft %>;margin-right: <%= rgh %>">
<div class="table-responsive">
  <table class="table table-striped table-bordered" width="100%" cellspacing="0">
    <tbody>
      <tr>
        <td style="background-color:#ffedcc; text-align:center; font-size:20px" colspan="2">
          <b><%= @lgbk.kid.name %></b>
          <p style="font-size: 14px;margin-bottom: -10px;margin-top: -5px">
            <%= @lgbk.created_at.strftime('%d-%^b-%y') %>
            <div style="margin-top: 5px;margin-bottom: -20px; font-size:10px">
              (In: 5pm, Out: 9pm)
            </div>
          </p>
          <p style="font-size: 12px;margin-bottom: -10px;margin-top: 5px">
            <i><%= @lgbk.taska.name %></i>
          </p>
        </td>
      </tr>
      <tr>
        <td style="background-color:#d8b2d8; font-size: 12px; text-align: center" colspan="2"><b>Catatan Ibu-Bapa</b></td>
      <tr>
        <td style="font-size: 15px; text-align: left">
          Anak Anda Sihat? - <b>YA</b>
        </td>
        <td style="font-size: 15px; text-align: left">
          Anak Tidur Nyenyak? - <b>YA</b>
        </td>
      <tr>
        <td style="font-size: 15px; text-align: left" colspan="2">
          <b>Nyatakan Sebab Jika Tidak</b><br>
          <%= "kdjsdkjsdkjsdkljsdkjsdkljsklsjdklsdjlkds" %>
        </td>
      </tr>
      <tr>
        <td>Expressive language skills</td>
        <td><%= "@ste.expr" %></td>
      </tr>  
      <tr>
        <td>OVERALL</td>
        <td><%= "@ste.ovc" %></td>
      </tr>
      <tr>
        <td style="background-color:#d8b2d8; font-size: 12px; text-align: center" colspan="2"><b>Catatan Pusat Jagaan</b></td>
      <tr>
        <td>Preverbal skills</td>
        <td><%= "@ste.pre" %></td>
      </tr>
      <tr>
        <td>Receptive language skills</td>
        <td><%= "@ste.rec" %></td>
      </tr>
      <tr>
        <td>Expressive language skills</td>
        <td><%= "@ste.expr" %></td>
      </tr>  
      <tr>
        <td>OVERALL</td>
        <td><%= "@ste.ovc" %></td>
      </tr>
    </tbody>
  </table>
</div>
<% if params[:pdf].blank? %>
  <%= link_to "Download", view_lgbk_path(lgbk: @lgbk.id, format: :pdf, pdf: true), class: "badge badge-success", style: "font-size: 15px" %>
<% end %>

</div>



