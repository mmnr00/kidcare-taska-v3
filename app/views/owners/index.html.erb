</br>
<%= link_to "Create New Session", new_college_path(id: @owner.id), class: "btn btn-sm btn-success active" %>
<div class="pull-right">
  <%= link_to tchd_xls_path(id: current_owner.id, all: "true", format: :xlsx), class: "btn btn-sm btn-info active" do %>
    <i class="fa fa-file-excel"></i> DOWNLOAD ALL DETAILS
  
  <% end %>
  <%= link_to "OVERALL REPORT", chsreport_path, class: "btn btn-sm btn-warning", target: "_blank" %>
</div><br><br>
<% if @owner.colleges.present? %>
  
      <div class="table-responsive">
        <table class="table table-striped table-bordered" id="" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th> SESSION NAME </th>
              <th> LOCATION </th>
              <th> DURATION </th>
              <th> NO OF TEACHERS </th>
              <th> ACTIONS </th>
            </tr>
          </thead>
          <tbody>
            <% @owner.colleges.order('start DESC').order('created_at DESC').each do |college| %>
            <tr>
              <td>
                <%= "#{college.name}(#{college.id})" %>
                <% if 1==1 #params[:adm].present? %>
                  <% if college.acv %>
                    <%= link_to "Deactivate", updstat_path(id: college.id, tp: "acv", act: "false"), class: "badge badge-danger" %>
                  <% else %>
                    <%= link_to "Activate", updstat_path(id: college.id, tp: "acv", act: "true"), class: "badge badge-success" %>
                  <% end %>

                  <% if params[:adm].present? %><% if college.appl %>
                    <%= link_to "Real", updstat_path(id: college.id, tp: "appl", act: "false"), class: "badge badge-info" %>
                  <% else %>
                    <%= link_to "Apply", updstat_path(id: college.id, tp: "appl", act: "true"), class: "badge badge-warning" %>
                  <% end %><% end %>
                <% end %>
              </td>
              <td><%= college.address %></td>
              <td>
                <%= "#{college.start.strftime("%d-%^b-%y")} to #{college.end.strftime("%d-%^b-%y")}" %>
              </td>
              <td><%= college.tchdetails.count %></td>
              <td>
                <%= link_to "View Session", show_owner_path(@owner, college: college), class: "btn btn-sm btn-primary active" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div></div>		
<% else %>
	No Colleges to display
<% end %>
