<div class="card mb-3">
    <div class="card-header">
      <i class="fas fa"></i>
      <b>CENTERS LIST FOR PROGRAM CAKNA ANAK (<%= @taskas.count %>)</b>
      <%= link_to rptckn_path, class: "badge badge-secondary shadow-sm", style: "font-size: 14px; font-weight: normal" do %>
          <i class="fa fa-arrow-circle-left"></i> Back to Summary
      <% end %>
    </div>
  <div class="card-body">
    <div class="table-responsive">
      <table class="table table-striped table-bordered" id="" width="100%" cellspacing="0">
        <thead class="thead-dark">
          <tr>
            <th> CENTER NAME </th>
            <th> NO OF CHILDRENS </th>
            <th> NO OF VOLUNTEERS </th>
            <th> ADDRESS </th>
          </tr>
        </thead>
        <tbody>

          <% @taskas.where.not(id: [606,613]).order('othnm ASC').each do |kuli|%>
            <tr>
              <td>
                <%= kuli.othnm %>
              </td>
              <td>
                <a href="/cknstd?taska_id=<%= kuli.id %>&sch=true">
                  <% if [286,606,592].include? kuli.id %>
                    <%= kuli.kids.where.not(classroom_id: nil).count %> 
                  <% else %>
                    <%= kuli.kids.count %>
                  <% end %>
                </a>
              </td>
              <td>
                <a href="/cknvltr?taska_id=<%= kuli.id %>&sch=true">
                  <%= kuli.vltrs.count %>
                </a>
              </td>
              <td>
                <b><%= kuli.name %></b><br>
                <%= kuli.address_1 %>&nbsp
                <%= kuli.address_2 %>&nbsp
                <%= kuli.city %>&nbsp
                <%= kuli.postcode %>&nbsp<%= kuli.states %><br>  
              </td>  
            </tr>
          <% end %> 

          <% @taskas.where(id: [606,613]).order('othnm ASC').each do |kuli|%>
            <tr>
              <td>
                <%= kuli.othnm %>
              </td>
              <td>
                <a href="/cknstd?taska_id=<%= kuli.id %>&sch=true">
                  <% if [286,606,592].include? kuli.id %>
                    <%= kuli.kids.where.not(classroom_id: nil).count %> 
                  <% else %>
                    <%= kuli.kids.count %>
                  <% end %>
                </a>
              </td>
              <td>
                <a href="/cknvltr?taska_id=<%= kuli.id %>&sch=true">
                  <%= kuli.vltrs.count %>
                </a>
              </td>
              <td>
                <b><%= kuli.name %></b><br>
                <%= kuli.address_1 %>&nbsp
                <%= kuli.address_2 %>&nbsp
                <%= kuli.city %>&nbsp
                <%= kuli.postcode %>&nbsp<%= kuli.states %><br>  
              </td>  
            </tr>
          <% end %> 

        </tbody>
      </table>
    </div>
  </div>