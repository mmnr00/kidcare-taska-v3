
<div class="" style="font-size:15px;background-color:#4c4cff;text-align:center;color:white">
  <b>HEALTH DECLARATION FORM FOR <%= @kid.name %></b>
</div><br>

<%= form_for(@covdec, :url => {:controller=>'parents', :action=>"#{act}"}, :html => {multipart: true, class: "form-horizontal", method: :post, role: "form"}) do |f| %>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>FATHER NAME</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.text_field :fname, class: "form-control", autofocus: true, required: true %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>FATHER IC</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.number_field :fic, class: "form-control", autofocus: true, required: true %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>FATHER PHONE NO</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.number_field :fph, class: "form-control", autofocus: true, required: true %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>FATHER OFFICE ADDRESS</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.text_area :foffc, class: "form-control", autofocus: true, required: true %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>MOTHER NAME</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.text_field :mname, class: "form-control", autofocus: true, required: true %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>MOTHER IC</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.number_field :mic, class: "form-control", autofocus: true, required: true %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>MOTHER PHONE NO</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.number_field :mph, class: "form-control", autofocus: true, required: true %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>MOTHER OFFICE ADDRESS</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.text_area :moffc, class: "form-control", autofocus: true, required: true %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>HOME ADDRESS</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.text_area :raddr, class: "form-control", autofocus: true, required: true %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>HOMETOWN/OTHER ADDRESS</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.text_area :vaddr, class: "form-control", autofocus: true %>
      </div>
    </div>
  </div>

  <div class="form-group"> 
    <div class="row">
      <div class="control-label col-sm-8">
        <strong>SIBLINGS INFORMATION</strong>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-8 col-12">
        <%= f.text_area :vaddr, class: "form-control", autofocus: true %>
      </div>
    </div>
  </div>
  
  <%= f.hidden_field :taska_id, value: @kid.taska.id %>
  <%= f.hidden_field :kid_id, value: @kid.id %>

  <%= f.submit :"SUBMIT", class: "btn btn-sm btn-info btn-block" %>

<% end %>


