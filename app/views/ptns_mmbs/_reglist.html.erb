<div class="table-responsive">
  <table class="table table-striped table-bordered" width="100%" cellspacing="0">

    <thead>
      <tr>
        <th style="background-color:#99cc99">NAMA</th>
        <th style="background-color:#99cc99">NO KP</th>
        <th style="background-color:#99cc99">ALAMAT</th>
        <th style="background-color:#99cc99">UMUR (TAHUN)</th>
        <th style="background-color:#99cc99">STATUS</th>
        <th style="background-color:#99cc99">PEKERJAAN</th>
        <th style="background-color:#99cc99">NO TELEFON & EMAIL</th>
      </tr>
    </thead>

    <tbody>
      <% @ptnsmmbs.order('name ASC').each do |sc| %>
        <tr>
          <td>
            <%= sc.name %>
            <%= link_to 'KEMASKINI', regedit_path(id: sc.id, evid: params[:evid]), class: "btn btn-sm btn-info" %>
          </td>
          <td><%= "#{sc.ic1}-#{sc.ic2}-#{sc.ic3}" %></td>
          <td><%= "#{sc.add1}, #{sc.add2}, #{sc.city}, #{sc.state}, #{sc.postcode}" %></td>
          <td><%= "#{Date.today.year - sc.dob.year}" %></td>
          <td><%= sc.edu %></td>
          <td><%= sc.ts_job %></td>
          <td>
            <%= "#{sc.ph1}-#{sc.ph2}" %><br>
            <%= sc.email %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>