<div class='row'>
  <div class='col-lg-8 col-12'>
    <%= form_for(@taska,:url => {:controller=>'taskas', :action=>"#{acti}"}, :html => {multipart: true, class: "form-horizontal", role: "form"}) do |f| %>

      <%= f.hidden_field :id, value: params[:id] %>   
      <%= f.hidden_field :rsvp, value: rsvp %> 

      <% if rsvp == 1 %> <!-- FOR RSVP ONLY -->
  
        <div class="form-group"> 
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>KEHADIRAN KE SIMPOSIUM ANIS 2019</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-12">
              <%= f.select :states, 
                            options_for_select([["YA"],
                                                ["TIDAK"]],
                                              selected: @taska.states), 
                              {include_blank: "Sila Pilih"}, {required: true} %> 
            </div>
          </div>
        </div>
   
        <div class="form-group"> 
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>NAMA WAKIL (JIKA ADA)</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-12">
              <%= f.text_field :address_2, class: "form-control", autofocus: true, style: "text-transform:uppercase" %>
            </div>
          </div>
        </div>

        <div class="form-group"> 
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>NO TEL WAKIL (JIKA ADA)</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-12">
              <%= f.text_field :postcode, class: "form-control", autofocus: true, style: "text-transform:uppercase" %>
            </div>
          </div>
        </div>
        <hr>

      <% else %>

        <!-- taska name -->    
        <div class="form-group"> 
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>NAMA PJKK</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-12">
              <%= f.text_field :name, class: "form-control", autofocus: true, required: true, style: "text-transform:uppercase" %>
            </div>
          </div>
        </div>

        

        <!-- TASKA ADDRESS -->
        <div class="form-group"> 
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>ALAMAT PJKK</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-12">
             <%= f.text_area :address_1, class: "form-control", autofocus: true, required: true, style: "text-transform:uppercase" %>
            </div>
          </div>
        </div>

        

        <!-- supervisor name -->    
        <div class="form-group"> 
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>NAMA PENGUSAHA</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-12">
              <%= f.text_field :supervisor, class: "form-control", autofocus: true, required: true, style: "text-transform:uppercase" %>
            </div>
          </div>
        </div>

        <!-- PHONE-->
        <div class="form-group"> 
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>NO TELEFON PENGUSAHA</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-8">
             <%= f.text_field  :phone_1, class: "form-control", autofocus: true, required: true %>
            </div>
          </div>
        </div>


        <!-- EMAIL -->    
        <div class="form-group"> 
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>NO PERMIT PJKK</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-12">
              <%= f.text_field :email, class: "form-control", autofocus: true, required: true %>
            </div>
          </div>
        </div>

        <%= f.hidden_field :bank_name, class: "form-control", :value => "MAYBANK / MALAYAN BANKING BERHAD" %>
        <%= f.hidden_field :acc_name, class: "form-control", placeholder: "e.g Taska ABC Sdn Bhd", autofocus: true, required: true, style: "text-transform:uppercase", value: "PLEASE INSERT" %>
        <%= f.hidden_field :acc_no, class: "form-control", autofocus: true, required: true, value: "PLEASE INSERT" %>
        <%= f.hidden_field :ssm_no, class: "form-control", autofocus: true, required: true, style: "text-transform:uppercase", value: "PLEASE INSERT" %>
        <%= f.hidden_field :plan, value: "ansys19" %>
        <%= f.hidden_field :pslm, value: 1 %>
        <%= f.hidden_field :blgt, value: true %>

      
      

        <div class="form-group"> <!-- DUN -->
          <div class="row">
            <div class="control-label col-sm-8">
              <strong>DUN</strong>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-8 col-8">
              <%= f.select :city, options_for_select($sel_dun, 
                                                    selected: @taska.city), 
              {include_blank: "SILA PILIH"}, {required: true} %>
            </div>
          </div>
        </div>

         

      <% end %> <!-- END UNTUK RSVP OR ELSE -->

          <div class="form-group">
            <div class="row">
              <div class="col-sm-offset-2 col-sm-10 col-4">
                <%= f.submit :"HANTAR",  class: 'btn btn-primary btn-lg' %>
              </div>
            </div>
          </div>
        <% end %>

      
      
    </div>
  </div>