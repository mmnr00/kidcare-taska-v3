<div class="container">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h2 class="panel-title" align="center"><%= @tchdetail.name.upcase %></h2>
    </div><br>
    <div class="panel-body">
      <div class="row">
        <div class="col-md-3 col-lg-3" align="center"> 
          <% image = @fotos.where(foto_name: "PROFILE PIC").first %>
          <% if image.picture.present? %>
            <a href="<%="#{image.picture.url}"%>" target="_blank">
              <% if @pdf %>
                <%= wicked_pdf_image_tag(image.picture.url, size: "200x200") %>
              <% else %>
                <%= image_tag(image.picture.url, size: "200x200") %>
              <% end %>
            </a>
          <% else %>
            No photo uploaded
          <% end %>
        </div>
         <div class=" col-md-9 col-lg-9"> 
        <div class="table-responsive">
          
          <table class="table table-striped" id="" width="100%" cellspacing="0">
            <tbody>
              <tr>
                <td><strong>IC NO:</strong></td>
                <td>
                  <%= "#{@tchdetail.ic_1}-""#{@tchdetail.ic_2}-""#{@tchdetail.ic_3}" %>
                </td>
              </tr>
              <tr>
                <td><strong>PHONE NO:</strong></td>
                <td>
                  <%= "#{@tchdetail.phone_1}-""#{@tchdetail.phone_2}" %>
                </td>
              </tr>
              <tr>
                <td><strong>EMAIL:</strong></td>
                <td>
                  <% if @tchdetail.teacher.present? %>
                    <%= "#{@tchdetail.teacher.email}" %>
                  <% else %>
                    <%= "#{@tchdetail.email}" %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td><strong>MARITAL STATUS:</strong></td>
                <td>
                  <%= "#{@tchdetail.marital.upcase}" %>
                </td>
              </tr>
              <tr>
                <td><strong>ADDRESS:</strong></td>
                <td>
                  <%= "#{@tchdetail.address_1.upcase}" %><br>
                  <%= "#{@tchdetail.address_2.upcase}" %><br>
                  <%= "#{@tchdetail.city.upcase}" %>
                  <%= "#{@tchdetail.states.upcase}" %>
                  <%= "#{@tchdetail.postcode}" %>
                </td>
              <tr>
                <td><strong>EDUCATION LEVEL:</strong></td>
                <td>
                  <%= "#{@tchdetail.education.upcase}" %>
                </td>
              </tr>
              <tr>
                <td><strong>IC COPY:</strong></td>
                <td>

                  <% image = @fotos.where(foto_name: "IC FRONT").first %>
                  <% if image.picture.present? %>
                    <a href="<%="#{image.picture.url}"%>" target="_blank">
                      <% if @pdf %>
                        <%= wicked_pdf_image_tag(image.picture.url, size: "50x50") %>
                      <% else %>
                        <%= image_tag(image.picture.url, size: "50x50") %>
                      <% end %>
                    </a>
                  <% else %>
                    No photo uploaded &nbsp
                  <% end %>

                  <% image = @fotos.where(foto_name: "IC BACK").first %>
                  <% if image.picture.present? %>
                    <a href="<%="#{image.picture.url}"%>" target="_blank">
                      <% if @pdf %>
                        <%= wicked_pdf_image_tag(image.picture.url, size: "50x50") %>
                      <% else %>
                        <%= image_tag(image.picture.url, size: "50x50") %>
                      <% end %>
                    </a>
                  <% else %>
                    No photo uploaded &nbsp
                  <% end %>
                </td>
                <td>
                </td>
              </tr>
              <% image = @fotos.where(foto_name: "DEPOSIT PAYMENT RECEIPT").first %>
              <% if image.present? %>
                <tr>
                  <td><strong>DEPOSIT PAYMENT RECEIPT:</strong></td>
                  <td>
                    
                    <% if image.picture.present? %>
                      <a href="<%="#{image.picture.url}"%>" target="_blank">
                        <% if @pdf %>
                          <%= wicked_pdf_image_tag(image.picture.url, size: "50x50") %>
                        <% else %>
                          <%= image_tag(image.picture.url, size: "50x50") %>
                        <% end %>
                      </a>
                    <% else %>
                      No photo uploaded &nbsp
                    <% end %>
                  </td>
                </tr>
              <% end %>
              <!-- START TASKA DETAILS -->
              <tr>
                <td><strong>INSTITUTION NAME:</strong></td>
                <td>
                  <% if @tchdetail.ts_name.present? %>
                  <%= "#{@tchdetail.ts_name.upcase}" %>
                  <% end %>
                </td>
              </tr>

              <tr>
                <td><strong>INSTITUTION OWNER NAME:</strong></td>
                <td>
                  <% if @tchdetail.ts_owner_name.present? %>
                  <%= "#{@tchdetail.ts_owner_name.upcase}" %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td><strong>INSTITUTION OWNER PHONE NO:</strong></td>
                <td>
                  <%= "#{@tchdetail.ts_phone_1}-""#{@tchdetail.ts_phone_2}" %>
                </td>
              </tr>
              <tr>
                <td><strong>INSTITUTION ADDRESS:</strong></td>
                <td>
                  <% if @tchdetail.ts_address_1.present? %>
                  <%= "#{@tchdetail.ts_address_1.upcase}" %><br>
                  <% end %>
                  <% if @tchdetail.ts_address_2.present? %>
                  <%= "#{@tchdetail.ts_address_2.upcase}" %><br>
                  <% end %>
                  <% if @tchdetail.ts_city.present? %>
                  <%= "#{@tchdetail.ts_city.upcase}" %>
                  <% end %>
                  <% if @tchdetail.ts_states.present? %>
                  <%= "#{@tchdetail.ts_states.upcase}" %>
                  <% end %>
                  <%= "#{@tchdetail.ts_postcode}" %>
                </td>
              </tr>
              <% if @tchdetail.anis == "true" %>
                <tr>
                  <td><strong>DUN</strong></td>
                  <td>
                    <%= @tchdetail.dun %>
                  </td>
                </tr>
                <tr>
                  <td><strong>NO PERAKUAN JKM/JPN</strong></td>
                  <td>
                    <%= @tchdetail.jkm %>
                  </td>
                </tr>
                <tr>
                  <td><strong>POST IN INSTITUTION</strong></td>
                  <td>
                    <%= @tchdetail.post %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>