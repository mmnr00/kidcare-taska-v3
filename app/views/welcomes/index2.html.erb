  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <h2 class="section-heading text-uppercase">SERVICES PRICING</h2>
        <h3 class="section-subheading text-muted">Be the first 50 centers to sign-up and get free setup fee worth <strong>RM 500</strong>.
      <div class="scontainer" style="width:100%">
        <div class="scontainer-fluid">
          <%= render 'taskas/pricing' %>
        </div>
      </div>
    </div>
    <div class="row text-center">
    </div>
  </div>
</section>
<% end %>



   

    
